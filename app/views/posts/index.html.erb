<%= link_to "Mi Blog", controller: "posts" %>
<%= link_to 'Nuevo post', new_post_path %>
<%= link_to 'Back', posts_path %>

<h1>Mis posts</h1>
<table>
  <tr> 
	<th>Titulo</th>  
	<th>Texto</th>  
	</tr>
    
    <th></th>
  <% @posts.each do |post| %>
  <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
  </tr>
  <% end %>
</table>
